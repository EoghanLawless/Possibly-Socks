extends layout

block content

  link(rel='stylesheet', href='/stylesheets/categories.css')

  div.title-section.text-center
    img.title-image(src="/images/white_fabric.jpg")
    h1.page-title #{title}
    p.page-description.lead.text-muted #{description}

  div.album.py-5.bg-light
    div.container
      div.row

        each category in categories

          div.col-lg-3.col-md-4.col-sm-6.col-xs-12
            div.card.lg-3.box-shadow
              img.thumbnail.card-img-top(src=category.thumbnail alt='thumbnail')
              div.card-body
                h3.category-title #{category.name}
                p.category-description.card-text #{category.short_description}
                a.btn.btn-block.btn-outline-secondary(href="/category/" + category.name, role='button') View socks
