extends layout

block content

  link(rel='stylesheet', href='/stylesheets/categories.css')

  div.title-section.text-center
    img.title-image(src="/images/white_fabric.jpg")
    h1.page-title Page title
    p.page-description.lead.text-muted Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Rhoncus dolor purus non enim praesent.

  div.album.py-5.bg-light
    div.container
      div.row

        each product in products

          div.col-lg-3.col-md-4.col-sm-6.col-xs-12
            div.card.lg-3.box-shadow
              img.thumbnail.card-img-top(src=product.thumbnail alt='thumbnail')
              div.card-body
                h3.product-title #{product.title}
                p.product-description.card-text #{product.description}
                div.d-flex.justify-content-between.align-items-center
                  strong.price-tag.text-muted â‚¬ #{product.price}
                  div.btn-group
                    button.btn.btn-sm.btn-outline-secondary(type='button') View
                    button.btn.btn-sm.btn-outline-success(type='button') Add to cart
